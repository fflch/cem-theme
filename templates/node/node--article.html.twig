    <main class="main">
        {# <!-- internas top header init --> #}
        <section class="internas-top-header">
            <div class="inner wrapper">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-xs-12">
                            <div class="breadcrumb">
                                <a href="/{{ language }}">{% trans %}Home{% endtrans %}</a>
                                <a href="/{{ language }}/noticias">{% trans %}notícias em destaque{% endtrans %}</a>
                                <span>{{ label }}</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        {# <!-- internas top header end --> #}
		      {# <!-- internas container init --> #}
        <section class="internas-container">
            <div class="inner wrapper">
                <div class="container-fluid">
                    <div class="row">
                        {# <!-- noticia listagem coluna left init --> #}
                        <div class="col-md-9 col-xs-12">
                            {# <!-- noticia header init --> #}
                            <div class="noticia-header">
                                <div class="data">
                                    <span>{{  drupal_field('field_data_de_publicacao','node') }}</span>
                                </div>
                                <div class="infos">
                                    <div class="fb-share-button" data-href="https://developers.facebook.com/docs/plugins/" data-layout="button_count" data-size="small" data-mobile-iframe="true"><a target="_blank" href="https://www.facebook.com/sharer/sharer.php?u=https%3A%2F%2Fdevelopers.facebook.com%2Fdocs%2Fplugins%2F&amp;src=sdkpreparse" class="fb-xfbml-parse-ignore">Compartilhar</a></div>
                                </div>
                                <div class="social">
                                    <a href="https://www.facebook.com/CemCepid" class="facebook" target="_blank" rel=”noopener noreferrer”><span>Facebook</span></a>
                                    <a href="https://twitter.com/CEM_CMS" class="twitter" target="_blank" rel=”noopener noreferrer”><span>Twitter</span></a>
                                    <a href="https://www.linkedin.com/company/centro-de-estudos-da-metropole" class="linkedin" target="_blank" rel=”noopener noreferrer”><span>linkedin</span></a>
                                </div>
                                <div class="title">
                                    <h1>
                                        {{ label }}
                                    </h1>
                                    <div class="sub-title">
                                        <p>{{ content.field_subtitulo }}</p>
                                    </div>
                                </div>
                                <div class="autor">
                                    {{  drupal_field('field_autor','node') }}
                                </div>
                            </div>
                            {# <!-- noticia header end --> #}
                            {# <!-- noticia conteudo init --> #}
				<div class="noticia-conteudo">
					{{ drupal_field('body','node') }}
				</div>
                                <div class="botao-voltar">
                                    <span>{% trans %}<a id="link-voltar" href="/{{ language }}/noticias">< voltar para notícias{% endtrans %}</a></span>
                                </div>
                        </div>
			{# <!-- noticia listagem coluna left end --> #}
	
			{# <!-- noticia listagem coluna right init --> #}
			<div class="col-md-3 col-xs-12">
				<div class="side-bar-box agenda">
                                    <div class="header">EVENTOS/AGENDA</div>
                                    <div class="box">
                                      {# <!-- home agenda item init --> #}
                                          {{ drupal_view('evento','bloco_evento_home',language) }}
                                          {# <!-- home agenda item end --> #}
                                            {% trans %}
                                              <a href="/{{ language }}/difusao-cientifica/agenda-semanal" class="link-more">agenda completa</a>
                                            {% endtrans %}
                                    </div>
			  </div>
			{# <!-- side bar agenda end --> #}

			<div class="side-bar-box recente">
				<div class="header">Notícias Recentes</div>
				<div class="box">
					{# <!-- side bar noticia recente item init --> #}
					{{ drupal_view('noticia','bloco_noticia_interna',language) }}
					{# <!-- side bar noticia recente item end --> #}
					<a href="/{{ language }}/noticias" class="link-more">mais notícias</a>
				</div>
			</div>
			{# <!-- side bar  noticias recentes end --> #}
		  </div>
	       </div>
	    </div>
	  </div>
       </section>
</main>
